show databases;
use kniazivna;

show tables;

-- 1.Вибрати усіх клієнтів, чиє ім'я має менше ніж 6 символів.
select * from client where length(FirstName)<6;

-- 2.Вибрати львівські відділення банку.
select * from department where DepartmentCity='Lviv';

-- 3.Вибрати клієнтів з вищою освітою та посортувати по прізвищу.
select * from client where Education='high'order by FirstName asc;

-- 4.Виконати сортування у зворотньому порядку над таблицею Заявка і вивести 5 останніх елементів.
select * from application order by idApplication desc limit 5;

-- 5.Вивести усіх клієнтів, чиє прізвище закінчується на OV чи OVA.
select * from client where LastName like '%ov' or LastName like '%ova';

-- 6.Вивести клієнтів банку, які обслуговуються київськими відділеннями.
select * from client c join department d on d.idDepartment=c.Department_idDepartment where DepartmentCity='Kyiv';


-- 7.Знайти унікальні імена клієнтів.
select  distinct FirstName from client; -- пфдкажіть чи це правильне рішення

-- 8.Вивести дані про клієнтів, які мають кредит більше ніж на 5000 тисяч гривень.
select * from application a join client c on c.idClient=a.Client_idClient where Currency='Gryvnia' and sum>5000;

-- 9.Порахувати кількість клієнтів усіх відділень та лише львівських відділень.
select count(idClient) as value_of_clients from client c join department d on d.idDepartment=c.Department_idDepartment where DepartmentCity='Lviv';
select count(idClient) as value_of_clients from client c join department d on d.idDepartment=c.Department_idDepartment;
-- або ще такий варіант
select count(idClient) as value_of_clients, DepartmentCity from client c join department d on d.idDepartment=c.Department_idDepartment group by DepartmentCity;
-- тут мало бути 2 записи, бо не зрозуміла до кінця?????
-- через and мені показувало тільки 1 запит, а другий ігнорувало, не впевнена, що правильно зробила це завданняalter


-- 10.Знайти кредити, які мають найбільшу суму для кожного клієнта окремо.
select max(Sum) as max_credit, FirstName from application a join client c on c.idClient=a.Client_idClient group by FirstName;

-- 11. Визначити кількість заявок на крдеит для кожного клієнта.
select count(CreditState) as value_of_CreditState, FirstName from application a join client c on c.idClient=a.Client_idClient group by FirstName;

-- 12. Визначити найбільший та найменший кредити.
select max(Sum) as max_credit from application;
 select min(Sum) as min_credit from application; -- не впевнена, що це правильне рішення, бо не вдалось це зробити одним запитом

-- 13. Порахувати кількість кредитів для клієнтів,які мають вищу освіту.
select count(CreditState) as value_of_Credit, FirstName, Education from application a join client c on c.idClient=a.Client_idClient where Education='high' group by FirstName;
-- не впевнена чи тут не треба було враховувати статус кредитної заявки?


-- 14. Вивести дані про клієнта, в якого середня сума кредитів найвища.
select avg(sum) as avg_sum_of_credit, Client_idClient, FirstName, LastName, Education, Passport, City, Age from application a join client c on c.idClient=a.Client_idClient  group by Client_idClient order by avg(sum) desc limit 1 ;


-- 15. Вивести відділення, яке видало в кредити найбільше грошей
select sum(Sum) as max_credit_sum, DepartmentCity from application a join client c on c.idClient=a.Client_idClient join department d on d.idDepartment=c.Department_idDepartment group by DepartmentCity order by sum(sum) desc limit 1;
-- тут теж не впевнена у відповіді

-- 16. Вивести відділення, яке видало найбільший кредит.
select max(sum) as max_sum, DepartmentCity from application a join client c on c.idClient=a.Client_idClient join department d on d.idDepartment=c.Department_idDepartment group by DepartmentCity order by max(sum) desc limit 1;
-- тут перевірте, будь ласка, бо не впевнена, що не запуталась


-- 17. Усім клієнтам, які мають вищу освіту, встановити усі їхні кредити у розмірі 6000 грн.
select * from client where Education='high';
